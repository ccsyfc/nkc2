.row
  .col-xs-12.col-sm-6
    .UserProfileSection1
      -var uid = thatuid
      include interface_profile_avatar.jade
      -var user = thatuser  
      div(style='display:inline-block;margin-top:8px;')
        //.ForumTitleCircle(style='background-color:#{user.color||"#bbb"}')
        .ForumName #{user.username}
        
    -var user = thatuser
    include interface_profile_info_section2.jade
          
  .col-xs-12.col-sm-6
    .UserProfileSection1(style='text-align:left')
      -var user = thatuser
      h4 个人简介
      //hr
      if user.description && user.description.length>0
        
        div!=markdown_safe(user.description)
        hr
      
      h4 帖子签名
      //hr
      if user.post_sign && user.post_sign.length>0
        
        div!=markdown_safe(user.post_sign)
